textarea::placeholder {
  color: #8b949e;
}

button {
  margin-top: 15px;
  padding: 12px 25px;
  font-size: 16px;
  background-color: #238636;
  border: none;
  border-radius: 8px;
  color: white;
  font-weight: 600;
  cursor: pointer;
  transition: background 0.3s;
}

button:hover {
  background-color: #2ea043;
}

#result {
  margin-top: 25px;
  text-align: left;
  font-family: monospace;
  white-space: pre-wrap;
  background: #0d1117;
  padding: 15px;
  border-radius: 8px;
  border: 1px solid #30363d;
}